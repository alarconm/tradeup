# Local development environment for TradeUp
# Copy this to .env for local testing

# Flask
FLASK_ENV=development
SECRET_KEY=local-dev-secret-key-not-for-production

# SQLite for local testing (no Postgres needed)
DATABASE_URL=sqlite:///dev.db

# Dummy values for testing (won't make real API calls)
SHOPIFY_DOMAIN=test-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=test-token
SHOPIFY_ADMIN_TOKEN=test-token
SHOPIFY_CLIENT_ID=test-client-id
SHOPIFY_API_KEY=test-api-key
SHOPIFY_API_SECRET=test-api-secret
SHOPIFY_WEBHOOK_SECRET=test-webhook-secret

# Local server
PORT=5000
APP_URL=http://localhost:5000
